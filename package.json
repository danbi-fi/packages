{
  "name": "packages",
  "version": "0.0.1",
  "description": "단비 General purpose 패키지",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "tsc": "lerna run tsc --stream",
    "watch": "lerna run watch --stream",
    "test": "jest --coverage",
    "test:cli": "lerna run test:cli --stream",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint 'packages/**/**/*.ts'",
    "lint-fix": "eslint 'packages/**/**/*.ts' --fix",
    "release-docs": "typedoc  --exclude node_modules --out output/api --theme minimal --mode file",
    "tsdoc": "typedoc",
    "tsdoc:test": "typedoc --out docs packages/ring-ts/src/index.ts",
    "lerna": "lerna",
    "versionup": "lerna version --conventional-commits --no-git-tag-version",
    "versionup:patch": "lerna version patch --conventional-commits --no-git-tag-version",
    "versionup:minor": "lerna version minor --conventional-commits --no-git-tag-version",
    "versionup:major": "lerna version major --conventional-commits --no-git-tag-version",
    "postversionup": "npm run commit-version",
    "postversionup:patch": "npm run commit-version",
    "postversionup:minor": "npm run commit-version",
    "postversionup:major": "npm run commit-version",
    "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "release": "lerna publish from-package",
    "release:canary": "lerna publish --canary --preid next --dist-tag next --force-publish='*' --no-push --no-git-tag-version --yes",
    "lerna:create": "lerna create",
    "lerna:add": "lerna add --no-bootstrap",
    "lerna:publish:github": "lerna publish from-package --registry https://npm.pkg.github.com --no-commit-hooks",
    "lerna:publish:npm": "lerna publish from-package --registry https://registry.npmjs.org --force-publish",
    "lerna:release": "lerna publish from-package",
    "lerna:publish": "npm run lerna:publish:npm && npm run lerna:publish:github",
    "lerna:publish:all": "lerna publish",
    "lerna:package:update": "lerna exec -- 'npx npm-check-updates -u'",
    "local-publish": "lerna publish --registry http://localhost:4873 --no-git-tag-version --no-push --no-verify-access"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danbi-fi/packages.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danbi-fi/packages/issues"
  },
  "homepage": "https://github.com/danbi-fi/packages#readme",
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "lerna": "4.0.0",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typedoc": "0.22.15",
    "typedoc-plugin-markdown": "3.12.1",
    "typescript": "4.6.3"
  }
}