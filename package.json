{
  "name": "packages",
  "version": "0.0.1",
  "description": "단비 General purpose 패키지",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "tsc": "lerna run tsc --stream",
    "watch": "lerna run watch --stream",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint 'packages/**/**/*.ts'",
    "lint-fix": "eslint 'packages/**/**/*.ts' --fix",
    "release-docs": "typedoc  --exclude node_modules --out output/api --theme minimal --mode file",
    "tsdoc": "typedoc",
    "tsdoc:test": "typedoc --out docs packages/ring-ts/src/index.ts",
    "lerna": "lerna",
    "versionup": "lerna version --conventional-commits --no-git-tag-version",
    "lerna:create": "lerna create",
    "lerna:add": "lerna add --no-bootstrap",
    "lerna:publish:github": "lerna publish from-package --registry https://npm.pkg.github.com --no-commit-hooks",
    "lerna:publish:npm": "lerna publish --registry https://registry.npmjs.org --force-publish",
    "lerna:release": "lerna publish from-package",
    "lerna:publish": "npm run lerna:publish:npm && npm run lerna:publish:github",
    "lerna:publish:all": "lerna publish",
    "lerna:package:update": "lerna exec -- 'npx npm-check-updates -u'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danbi-fi/packages.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danbi-fi/packages/issues"
  },
  "homepage": "https://github.com/danbi-fi/packages#readme",
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "lerna": "4.0.0",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typedoc": "0.22.12",
    "typedoc-plugin-markdown": "3.11.14",
    "typescript": "4.5.5"
  }
}