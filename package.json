{
  "name": "packages",
  "version": "0.0.1",
  "description": "단비 General purpose 패키지",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "tsc": "lerna run tsc --stream",
    "watch": "lerna run watch --stream",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint 'packages/**/**/*.ts'",
    "lint-fix": "eslint 'packages/**/**/*.ts' --fix",
    "release-docs": "typedoc  --exclude node_modules --out output/api --theme minimal --mode file",
    "tsdoc": "typedoc",
    "tsdoc:test": "typedoc --out docs packages/ring-ts/src/index.ts",
    "lerna:add": "lerna add --no-bootstrap",
    "lerna:publish:github": "lerna publish from-package --registry https://npm.pkg.github.com",
    "lerna:publish:npm": "lerna publish --registry https://registry.npmjs.org",
    "lerna:release": "lerna publish from-package",
    "lerna:publish": "yarn lerna:publish:npm && yarn lerna:publish:github"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danbi-fi/packages.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danbi-fi/packages/issues"
  },
  "homepage": "https://github.com/danbi-fi/packages#readme",
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.4",
    "lerna": "4.0.0",
    "prettier": "2.3.1",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "typedoc": "0.20.36",
    "typedoc-plugin-markdown": "3.9.0",
    "typescript": "4.3.2"
  }
}
